---
import Page from '../layouts/Page.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';

const services = [
  {
    title: 'Brand Strategy',
    description:
      'Clarify your vision with messaging, positioning, and a cohesive identity that resonates.',
  },
  {
    title: 'Digital Products',
    description:
      'Design and build responsive websites and apps focused on usability and measurable growth.',
  },
  {
    title: 'Launch Support',
    description:
      'Partner with our experts to plan, launch, and optimize campaigns with confidence.',
  },
];
---
<Page title="Acme Co. — Strategic design partners" description="A boutique studio crafting delightful digital experiences.">
  <Hero />
  <section class="services" aria-labelledby="services-heading">
    <div class="container">
      <div class="intro">
        <p class="eyebrow">Services</p>
        <h2 id="services-heading">Everything you need to launch with impact</h2>
        <p>
          From the first sketch to global launch, our multidisciplinary team guides the process with
          clarity, transparency, and measurable results.
        </p>
      </div>
      <div class="grid" role="list">
        {services.map((service) => (
          <article class="card" role="listitem">
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </article>
        ))}
      </div>
    </div>
  </section>
  <section class="testimonial" aria-labelledby="testimonial-heading">
    <div class="container">
      <div class="quote">
        <p class="eyebrow">Testimonial</p>
        <h2 id="testimonial-heading">“A trusted partner from day one.”</h2>
        <p>
          “Acme Co. helped us reimagine our brand and digital platform with empathy and precision.
          Their team was proactive, responsive, and treated our success like their own.”
        </p>
        <p class="author">Alex Rivera · VP of Product, Horizon Labs</p>
      </div>
    </div>
  </section>
  <ContactForm />
  <style>
    .services {
      padding: 5rem 0 6rem;
    }

    .intro {
      max-width: 42ch;
    }

    .intro h2 {
      margin: 0 0 1rem;
      font-size: clamp(2rem, 4vw, 2.75rem);
    }

    .intro p {
      color: var(--color-muted);
      margin: 0 0 1.5rem;
    }

    .eyebrow {
      text-transform: uppercase;
      letter-spacing: 0.32em;
      font-size: 0.75rem;
      color: var(--color-accent);
      margin-bottom: 1rem;
      font-weight: 600;
    }

    .grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }

    .card {
      background: var(--color-surface);
      border-radius: var(--radius);
      padding: 2rem;
      box-shadow: var(--shadow);
      display: grid;
      gap: 0.75rem;
    }

    .card h3 {
      margin: 0;
      font-size: 1.3rem;
    }

    .card p {
      margin: 0;
      color: var(--color-muted);
    }

    .testimonial {
      padding: 5rem 0;
      background: linear-gradient(135deg, rgba(47, 128, 237, 0.1), rgba(99, 102, 241, 0.08));
    }

    .quote {
      max-width: 48ch;
      margin: 0 auto;
      text-align: center;
    }

    .quote h2 {
      margin: 0 0 1.5rem;
      font-size: clamp(2rem, 4vw, 2.75rem);
    }

    .quote p {
      margin: 0 0 1rem;
      color: var(--color-muted);
    }

    .author {
      font-weight: 600;
      color: var(--color-text);
    }
  </style>
</Page>
